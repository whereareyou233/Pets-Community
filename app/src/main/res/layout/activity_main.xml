<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yel"
    android:orientation="horizontal"
    tools:context=".MainActivity">
    <!-- 宠物社区 -->

    <ImageView
        android:id="@+id/vector_1"
        android:layout_width="81dp"
        android:layout_height="92.86dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@mipmap/logo" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vector_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="-18sp"
        android:text="宠物社区"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/some_id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/some_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:lineSpacingExtra="-18sp"
        android:text="方便你，了解它"
        android:textColor="#252525"
        android:textSize="18dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="340dp"
        android:background="@drawable/rectangle_shape"
        android:orientation="vertical">

        <LinearLayout

            android:id="@+id/load_rigist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_shape"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/load"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/but_style1_shape"
                android:gravity="center"
                android:textOff="登录"
                android:textOn="登录"
                android:textSize="20dp">


            </ToggleButton>

            <ToggleButton
                android:id="@+id/regist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/but_style1_shape"
                android:gravity="center"
                android:textOff="注册"
                android:textOn="注册"
                android:textSize="20dp" />


        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/ViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </androidx.viewpager.widget.ViewPager>
        　　
        　　
        　　
        　　
    </LinearLayout>


</RelativeLayout>

